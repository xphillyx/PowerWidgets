@font-face{
    font-family: "Fluent-Icons-Regular";
    src: url("../fonts/FluentSystemIcons-Regular.ttf");
}

body{
  margin: 0px;
  padding: 0px;
  width: 100%;
  height: 100%;
}

#menu-separator{
    position: fixed;
    top: 24px;
    left: 140px;
    width: 1px;
    height: 24px;
}

#menu-ui{
    position: fixed;
    top: 15px;
    left: 156px;
}

@media(prefers-color-scheme: light){
  body{
    background-color: rgb(246, 246, 246);
    color: black;
  }

  #menu-separator{
      background-color: rgb(35, 35, 35);
  }
  
  header{
    width: 100%;
    height: 70px;
    background-color: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(50px);
    -webkit-backdrop-filter: blur(50px);
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
    text-align: center;
    display: table;
  }
  
  #logo-text{
    color: rgb(15, 15, 15);
  }
}

@media(prefers-color-scheme: dark){
  body {
    background-color: rgb(30, 30, 30);
    color: white;
  }
  
  #menu-separator{
      background-color: rgb(200, 200, 200);
  }

  header {
    width: 100%;
    height: 70px;
    background-color: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(50px);
    -webkit-backdrop-filter: blur(50px);
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
    text-align: center;
    display: table;
  }
  
  #logo-text{
    color: rgb(250, 250, 250);
  }
}

header{
    position: fixed;
    top: 0px;
    width: 100%;
}

.fluent-icons{
    font-family: "Fluent-Icons-Regular";
    font-size: 20px;
    font-style: normal;
    display: inline-block;
}

.description-text{
    font-size: 24px;
}

.title-text{
    font-size: 60px;
    font-weight: bold;
}

#start-text-div{
    padding-left: 46px;
    padding-right: 46px;
    text-align: center;
    position: relative;
    padding-top: 50px;
}

#logo-div{
  position: absolute;
  display: inline-block;
  top: 13.5px;
  left: 14px;
}

#logo-text{
  font-size: 20px;
  font-family: 'Segoe UI', sans-serif;
  font-weight: bold;
  position: relative;
  left: 6px;
  top: -13px;
}

#get-app-button{
  position: absolute;
  top: 14px;
  right: 12px;
}

#start-text-actions{
    display: table;
    width: 100%;
    text-align: center;
    padding-top: 35px;
}

#app-view{
    position: absolute;
    /* top: 80px; */
    width: 100%;
    height: 565px;
    text-align: center;
    display: table;
    bottom: -510px;
}

#app-view-img{
    display: inline-block;
    height: 706px;
    width: 100%;
    max-width: 1000px;
    border-radius: 8px;
    padding-left: 60px;
    padding-right: 60px;
    box-shadow: 0 -3 10px rgba(0, 0, 0, 0.3);
    background-image: url('../img/app-view.png');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
}

#start-div{
    width: 100%;
    height: auto;
    padding-top: 100px;
    padding-bottom: 350px;
    background-image: url('../img/background.jpg');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
}
